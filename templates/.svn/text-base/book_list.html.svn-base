{% load mptt_tags %} 

<html>
<head>
      <link rel="stylesheet" type="text/css" href="/static/css/main.css" />
	<title> {{ book_name }} </title>
</head>
<body>
{% if user.is_authenticated %}
Welcome, {{ user.username }}. </br></br>
<span id="here_books">Here are the available books:<span></br>
{% endif %}

<div>
{% for book in book_list %}
	<div class="book_list">
	    <a href={% url contents.views.display_table_of_contents book.name|slugify %}>
	    {{ book.name }}
	    </a>
    </div>
{% endfor %}
</div>
</body>
</html>
